<!-- views/staff/create-password-step1.ejs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Password - Step 1</title>
  <link rel="stylesheet" href="/styles.css" />
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
</head>
<body>
<header class="restaurant-header">
    <div class="logo-container">
    <img src="/images/Lakshya_logo.jpg" alt="LakshyaFiesta Logo" class="logo" />
    <h1 class="restaurant-name">LakshyaFiesta</h1>
  </div>
</header>
  <section class="login-section">
    <div class="login-box">
      <h2>Chef: Verify Email</h2>
      <% if (error) { %><p class="error-message"><%= error %></p><% } %>
      <form method="POST" action="/chef/create-password-step1">
        <div class="form-group">
          <label for="email">Enter your chef email:</label>
          <input type="email" name="email" id="email" required />
        </div>
        <button type="submit" class="login-submit">Next</button>
      </form>
    </div>
  </section>
</body>
</html>
