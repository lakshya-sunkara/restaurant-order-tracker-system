<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Update chef</title>
  <link rel="stylesheet" href="/styles.css" />
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
  <style>
    .update-section {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: linear-gradient(to right, #fffaf0, #fff0d9);
      padding: 40px 20px;
    }

    .update-box {
      background: white;
      padding: 40px 30px;
      border-radius: 10px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 500px;
      text-align: center;
    }

    .update-box h2 {
      margin-bottom: 20px;
      color: #ff9900;
    }

    .form-group {
      margin-bottom: 20px;
      text-align: left;
    }

    .form-group label {
      display: block;
      font-weight: bold;
      margin-bottom: 6px;
      color: #333;
    }

    .form-group input,
    .form-group select {
      width: 100%;
      padding: 10px;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 6px;
    }

    .form-group input[type="file"] {
      padding: 5px;
    }

    .form-actions {
      margin-top: 20px;
      text-align: center;
    }

    .form-actions button {
      padding: 10px 20px;
      font-size: 1rem;
      background-color: #3498db;
      border: none;
      color: white;
      border-radius: 6px;
      cursor: pointer;
    }
    .gender-options {
  display: flex;
  gap: 20px;
  margin-top: 5px;
}

.gender-options label {
  display: flex;
  align-items: center;
  font-weight: normal;
}

.gender-options input[type="radio"] {
  margin-right: 6px;
}

    .form-actions button:hover {
      background-color: #2980b9;
    }
  </style>
</head>
<body>

    <header class="restaurant-header">
    <div class="logo-container">
      <div class="menu-icon-block" onclick="toggleDropdown()">
        <span class="menu-icon">â˜°</span>
      </div>
      <img src="/images/Lakshya_logo.jpg" alt="LakshyaFiesta Logo" class="logo" />
      <h1 class="restaurant-name">LakshyaFiesta Owner Dashboard</h1>
    </div>
    
    <nav class="dropdown" id="dropdownMenu">
        <a href="/owner/owner-dashboard">DashBoard</a>
      <a href="/owner/add-staff">Add Staff</a>
      <a href="/owner/manage-staff">Manage Staff</a>
      <a href="/owner/add-dish">Add Dish</a>
      <a href="/owner/logout">Logout</a>
    </nav>
  </header>
  <section class="update-section">
    <div class="update-box">
      <h2>Update Staff</h2>

      <form action="/update-staff/<%= staff._id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Full Name:</label>
          <input type="text" name="name" id="name" value="<%= staff.name %>" required />
        </div>

        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" name="email" id="email" value="<%= staff.email %>" required />
        </div>

        <div class="form-group">
          <label for="phone">Phone:</label>
          <input type="tel" name="phone" id="phone" value="<%= staff.phone %>" required pattern="[0-9]{10}" />
        </div>

        <div class="form-group">
  <label>Gender:</label>
  <div class="gender-options">
    <label><input type="radio" name="gender" value="Male" <%= staff.gender === 'Male' ? 'checked' : '' %> /> Male</label>
    <label><input type="radio" name="gender" value="Female" <%= staff.gender === 'Female' ? 'checked' : '' %> /> Female</label>
    <label><input type="radio" name="gender" value="Other" <%= staff.gender === 'Other' ? 'checked' : '' %> /> Other</label>
  </div>
</div>


        <div class="form-group">
          <label for="address">Address:</label>
          <input type="text" name="address" id="address" value="<%= staff.address %>" required />
        </div>

        <div class="form-group">
  <label for="dateOfBirth">Date of Birth:</label>
  <input type="date" name="dateOfBirth" id="dateOfBirth" value="<%= staff.dateOfBirth ? staff.dateOfBirth.toISOString().split('T')[0] : '' %>" required />
</div>

<div class="form-group">
  <label for="accountHolderName">Account Holder Name:</label>
  <input type="text" name="accountHolderName" id="accountHolderName" value="<%= staff.accountDetails?.accountHolderName || '' %>" required />
</div>

<div class="form-group">
  <label for="accountNumber">Account Number:</label>
  <input type="text" name="accountNumber" id="accountNumber" value="<%= staff.accountDetails?.accountNumber || '' %>" required pattern="[0-9]{9,18}" />
</div>

<div class="form-group">
  <label for="ifscCode">IFSC Code:</label>
  <input type="text" name="ifscCode" id="ifscCode" value="<%= staff.accountDetails?.ifscCode || '' %>" required pattern="[A-Z]{4}0[A-Z0-9]{6}" />
</div>


        <div class="form-group">
  <label for="image">Current Image:</label><br>
  <img src="/images/staff/<%= staff.image %>" alt="Staff Image" style="width: 120px; height: 120px; object-fit: cover; border-radius: 6px; margin-bottom: 10px;" />

  <label for="image">Change Image (optional):</label>
  <input type="file" name="image" id="image" accept="image/*" />
</div>


        <div class="form-actions">
          <button type="submit">Update Staff</button>
        </div>
      </form>
    </div>
  </section>

  <script src="/main.js"></script>
</body>
</html>
